{
    "name": "rogervila/global-namespace",
    "type": "library",
    "description": "Prefix global PHP functions under a namespace",
    "keywords": [
        "php global namespace"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Roger Vil√†",
            "email": "rogervila@me.com"
        }
    ],
    "require": {},
    "require-dev": {
        "php": "^7.2 || ^8.0",
        "mockery/mockery": "1.3.* || 1.4.* || 1.5.*",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "PHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/examples"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
